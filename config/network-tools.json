        "type": "PE32"
      },
      "condition": "$all -or $Http"
    },
    {
      "name": "mmdbinspect",
      "description": "Tool to inspect MaxMind DB files",
      "type": "github",
      "category": "network",
      "source": {
        "repo": "maxmind/mmdbinspect",
        "match": "windows_amd64.zip"
      },
      "destination": {
        "path": "${SETUP_PATH}/mmdbinspect.zip"
      },
      "validation": {
        "type": "Zip archive data"
      },
      "post_download": [
        {
          "action": "delete",
          "path": "${TOOLS}/mmdbinspect"
        },
        {
          "action": "extract",
          "source": "${SETUP_PATH}/mmdbinspect.zip",
          "destination": "${TOOLS}"
        },
        {
          "action": "move",
          "source": "${TOOLS}/mmdbinspect_*",
          "destination": "${TOOLS}/mmdbinspect"
        }
      ],
      "condition": "$all -or $Release"
    },
    {
      "name": "HindSight",
      "description": "Web browser forensics tool",
      "type": "github",
      "category": "network",
      "source": {
        "repo": "obsidianforensics/hindsight",
        "match": "hindsight.exe"
      },
      "destination": {
        "path": "${SETUP_PATH}/hindsight.exe"
      },
      "validation": {
        "type": "PE32"
      },
      "post_download": [
        {
          "action": "copy",
          "source": "${SETUP_PATH}/hindsight.exe",
          "destination": "${TOOLS}/bin"
        }
      ],
      "condition": "$all -or $Release"
    },
    {
      "name": "HindSight GUI",
      "description": "Web browser forensics tool (GUI version)",
      "type": "github",
      "category": "network",
      "source": {
        "repo": "obsidianforensics/hindsight",
        "match": "hindsight_gui.exe"
      },
      "destination": {
        "path": "${SETUP_PATH}/hindsight_gui.exe"
      },
      "validation": {
        "type": "PE32"
      },
      "post_download": [
        {
          "action": "copy",
          "source": "${SETUP_PATH}/hindsight_gui.exe",
          "destination": "${TOOLS}/bin"
        }
      ],
      "condition": "$all -or $Release"
    },
    {
      "name": "ChromeCacheView",
      "description": "View the content of Chrome web browser cache",
      "type": "http",
      "category": "network",
      "source": {
        "url": "https://www.nirsoft.net/utils/chromecacheview.zip"
      },
      "destination": {
        "path": "downloads/chromecacheview.zip"
      },
      "validation": {
        "type": "Zip archive data"
      },
      "post_download": [
        {
          "action": "extract",
          "source": "${SETUP_PATH}/chromecacheview.zip",
          "destination": "${TOOLS}/ntemp"
        },
        {
          "action": "copy",
          "source": "${TOOLS}/ntemp/readme.txt",
          "destination": "${TOOLS}/ntemp/chromecacheview.txt"
        },
        {
          "action": "copy",
          "source": "${TOOLS}/ntemp/*",
          "destination": "${TOOLS}/nirsoft"
        },
        {
          "action": "delete",
          "path": "${TOOLS}/ntemp"
        }
      ],
      "condition": "$all -or $Http"
    },
