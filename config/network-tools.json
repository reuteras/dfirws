{
  "tools": [
    {
      "name": "Wireshark",
      "description": "Network protocol analyzer",
      "type": "winget",
      "category": "network",
      "source": {
        "id": "WiresharkFoundation.Wireshark"
      },
      "destination": {
        "path": "downloads/wireshark.msi"
      },
      "validation": {
        "type": "Composite Document File V2 Document"
      },
      "condition": "$all -or $Winget"
    },
    {
      "name": "Npcap",
      "description": "Packet capture library for Windows",
      "type": "http",
      "category": "network",
      "source": {
        "url": "https://npcap.com/${NpcapVersion}"
      },
      "destination": {
        "path": "downloads/npcap.exe"
      },
      "validation": {
        "type": "PE32"
      },
      "condition": "$all -or $Http"
    },
    {
      "name": "nmap",
      "description": "Network discovery and security auditing tool",
      "type": "http",
      "category": "network",
      "source": {
        "url": "${nmap_url}"
      },
      "destination": {
        "path": "downloads/nmap.exe"
      },
      "validation": {
        "type": "PE32"
      },
      "post_download": [
        {
          "action": "delete",
          "path": "${TOOLS}/nmap"
        },
        {
          "action": "extract",
          "source": "${SETUP_PATH}/nmap.exe",
          "destination": "${TOOLS}/nmap"
        }
      ],
      "condition": "$all -or $Http"
    },
    {
      "name": "Burp Suite",
      "description": "Web vulnerability scanner",
      "type": "winget",
      "category": "network",
      "source": {
        "id": "PortSwigger.BurpSuite.${BURP_SUITE_EDITION}"
      },
      "destination": {
        "path": "downloads/burp.exe"
      },
      "validation": {
        "type": "PE32"
      },
      "condition": "$all -or $Winget"
    },
    {
      "name": "OpenVPN",
      "description": "Virtual private network application",
      "type": "http",
      "category": "network",
      "source": {
        "url": "https://openvpn.net/downloads/openvpn-connect-v3-windows.msi"
      },
      "destination": {
        "path": "downloads/openvpn.msi"
      },
      "validation": {
        "type": "Composite Document File V2 Document"
      },
      "condition": "$all -or $Http"
    },
    {
      "name": "OpenVPN via WinGet",
      "description": "Virtual private network application",
      "type": "winget",
      "category": "network",
      "source": {
        "id": "OpenVPNTechnologies.OpenVPNConnect"
      },
      "destination": {
        "path": "downloads/openvpn.msi"
      },
      "validation": {
        "type": "Composite Document File V2 Document"
      },
      "condition": "$all -or $Winget"
    },
    {
      "name": "WireGuard",
      "description": "Modern VPN protocol",
      "type": "winget",
      "category": "network",
      "source": {
        "id": "WireGuard.WireGuard"
      },
      "destination": {
        "path": "downloads/wireguard.msi"
      },
      "validation": {
        "type": "Composite Document File V2 Document"
      },
      "condition": "$all -or $Winget"
    },
    {
      "name": "Tailscale",
      "description": "Zero config VPN",
      "type": "winget",
      "category": "network",
      "source": {
        "id": "Tailscale.Tailscale"
      },
      "destination": {
        "path": "downloads/tailscale.exe"
      },
      "validation": {
        "type": "PE32"
      },
      "condition": "$all -or $Winget"
    },
    {
      "name": "Procdot",
      "description": "Visual process and network analyzer",
      "type": "http",
      "category": "network",
      "source": {
        "url": "https://procdot.com/${procdot_path}"
      },
      "destination": {
        "path": "downloads/procdot.zip"
      },
      "validation": {
        "type": "Zip archive data"
      },
      "post_download": [
        {
          "action": "delete",
          "path": "${TOOLS}/procdot"
        },
        {
          "action": "extract",
          "source": "${SETUP_PATH}/procdot.zip",
          "destination": "${TOOLS}/procdot"
        }
      ],
      "condition": "$all -or $Http"
    },
    {
      "name": "zaproxy",
      "description": "OWASP Zed Attack Proxy",
      "type": "github",
      "category": "network",
      "source": {
        "repo": "zaproxy/zaproxy",
        "match": "windows.exe"
      },
      "destination": {
        "path": "${SETUP_PATH}/zaproxy.exe"
      },
      "validation": {
        "type": "PE32"
      },
      "condition": "$all -or $Release"
    },
    {
      "name": "Flare-Fakenet-NG",
      "description": "Next generation dynamic network analysis tool",
      "type": "github",
      "category": "network",
      "source": {
        "repo": "mandiant/flare-fakenet-ng",
        "match": "fakenet"
      },
      "destination": {
        "path": "${SETUP_PATH}/fakenet.zip"
      },
      "validation": {
        "type": "Zip archive data"
      },
      "post_download": [
        {
          "action": "extract",
          "source": "${SETUP_PATH}/fakenet.zip",
          "destination": "${TOOLS}"
        },
        {
          "action": "delete",
          "path": "${TOOLS}/fakenet"
        },
        {
          "action": "move",
          "source": "${TOOLS}/fakenet*",
          "destination": "${TOOLS}/fakenet"
        }
      ],
      "condition": "$all -or $Release"
    },
    {
      "name": "hfs",
      "description": "HTTP File Server",
      "type": "github",
      "category": "network",
      "source": {
        "repo": "rejetto/hfs",
        "match": "hfs-windows-x64"
      },
      "destination": {
        "path": "${SETUP_PATH}/hfs.zip"
      },
      "validation": {
        "type": "Zip archive data"
      },
