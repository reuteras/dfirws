{
  "tools": [
    {
      "name": "7-Zip",
      "description": "File archiver with high compression ratio",
      "type": "http",
      "category": "utilities",
      "source": {
        "url": "https://www.7-zip.org/${7zip_path}"
      },
      "destination": {
        "path": "downloads/7zip.msi"
      },
      "validation": {
        "type": "Composite Document File V2 Document"
      },
      "condition": "$all"
    },
    {
      "name": "Notepad++",
      "description": "Text and source code editor",
      "type": "github",
      "category": "utilities",
      "source": {
        "repo": "notepad-plus-plus/notepad-plus-plus",
        "match": "Installer.x64.exe$"
      },
      "destination": {
        "path": "${SETUP_PATH}/notepad++.exe"
      },
      "validation": {
        "type": "PE32"
      },
      "condition": "$all -or $Release"
    },
    {
      "name": "ComparePlus for Notepad++",
      "description": "Comparison plugin for Notepad++",
      "type": "github",
      "category": "utilities",
      "source": {
        "repo": "pnedev/comparePlus",
        "match": "x64.zip"
      },
      "destination": {
        "path": "${SETUP_PATH}/comparePlus.zip"
      },
      "validation": {
        "type": "Zip archive data"
      },
      "condition": "$all -or $Release"
    },
    {
      "name": "DSpellCheck for Notepad++",
      "description": "Spell checking plugin for Notepad++",
      "type": "github",
      "category": "utilities",
      "source": {
        "repo": "Predelnik/DSpellCheck",
        "match": "x64.zip"
      },
      "destination": {
        "path": "${SETUP_PATH}/DSpellCheck.zip"
      },
      "validation": {
        "type": "Zip archive data"
      },
      "condition": "$all -or $Release"
    },
    {
      "name": "NppMarkdownPanel for Notepad++",
      "description": "Markdown preview panel for Notepad++",
      "type": "github",
      "category": "utilities",
      "source": {
        "repo": "mohzy83/NppMarkdownPanel",
        "match": "x64.zip"
      },
      "destination": {
        "path": "${SETUP_PATH}/NppMarkdownPanel.zip"
      },
      "validation": {
        "type": "Zip archive data"
      },
      "condition": "$all -or $Release"
    },
    {
      "name": "WinMerge",
      "description": "Visual diff and merge tool",
      "type": "winget",
      "category": "utilities",
      "source": {
        "id": "WinMerge.WinMerge"
      },
      "destination": {
        "path": "downloads/winmerge.exe"
      },
      "validation": {
        "type": "PE32"
      },
      "condition": "$all -or $Winget"
    },
    {
      "name": "HxD",
      "description": "Hex editor",
      "type": "http",
      "category": "utilities",
      "source": {
        "url": "https://mh-nexus.de/downloads/HxDSetup.zip"
      },
      "destination": {
        "path": "downloads/hxd.zip"
      },
      "validation": {
        "type": "Zip archive data"
      },
      "post_download": [
        {
          "action": "delete",
          "path": "${TOOLS}/hxd"
        },
        {
          "action": "extract",
          "source": "${SETUP_PATH}/hxd.zip",
          "destination": "${TOOLS}/hxd"
        }
      ],
      "condition": "$all -or $Http"
    },
    {
      "name": "Terminal-Icons",
      "description": "PowerShell module for file and folder icons",
      "type": "powershell-module",
      "category": "utilities",
      "source": {
        "name": "Terminal-Icons"
      },
      "destination": {
        "path": "downloads/powershell-modules/Terminal-Icons"
