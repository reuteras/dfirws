{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DFIRWS Tools Configuration",
  "description": "Configuration for tools to download and install in DFIRWS",
  "type": "object",
  "properties": {
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the tool"
          },
          "description": {
            "type": "string",
            "description": "Brief description of the tool"
          },
          "type": {
            "type": "string",
            "enum": ["github", "http", "winget", "didier", "vscode-extension"],
            "description": "Type of download source"
          },
          "category": {
            "type": "string",
            "enum": ["forensics", "development", "utilities", "analysis", "reversing", "network"],
            "description": "Category of tool for organization"
          },
          "enabled": {
            "type": "boolean",
            "default": true,
            "description": "Whether this tool should be downloaded"
          },
          "source": {
            "type": "object",
            "description": "Source information for the download",
            "properties": {
              "repo": {
                "type": "string",
                "description": "GitHub repository in the format 'owner/repo'"
              },
              "match": {
                "type": "string",
                "description": "Regular expression to match against release assets"
              },
              "url": {
                "type": "string",
                "description": "Direct URL or page URL for scraping"
              },
              "pattern": {
                "type": "string",
                "description": "RegEx pattern to extract download URL from page"
              },
              "base_url": {
                "type": "string",
                "description": "Base URL to prepend to extracted URL if needed"
              },
              "id": {
                "type": "string", 
                "description": "WinGet package ID"
              }
            }
          },
          "destination": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Destination path for the downloaded file"
              },
              "rename": {
                "type": "string",
                "description": "Optional new name for the downloaded file"
              }
            },
            "required": ["path"]
          },
          "validation": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "Expected file type for validation"
              },
              "checksum": {
                "type": "string",
                "description": "Expected checksum for validation"
              }
            }
          },
          "post_download": {
            "type": "array",
            "description": "Actions to perform after download",
            "items": {
              "type": "object",
              "properties": {
                "action": {
                  "type": "string",
                  "enum": ["extract", "move", "copy", "delete", "rename", "run_script"]
                },
                "source": {
                  "type": "string"
                },
                "destination": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "script": {
                  "type": "string"
                },
                "args": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["action"]
            }
          },
          "dependencies": {
            "type": "array",
            "description": "Names of tools that must be downloaded first",
            "items": {
              "type": "string"
            }
          },
          "condition": {
            "type": "string",
            "description": "PowerShell expression to evaluate whether to download"
          }
        },
        "required": ["name", "type", "source", "destination"]
      }
    }
  },
  "required": ["tools"]
}
